@model MyTeam.ViewModels.MatchesViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>My Team's Scheduled Matches </h2>
<table id="ItemsTable" class="table table-striped table-bordered table-hover" style="width:100%">
    <thead>
    <tr>
        <th>Date</th>
        <th>Home Team</th>
        <th>Away Team</th>
        <th>Competition</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var match in Model.Matches)
    {
        <tr>
            <td>@match.UtcDate.ToString("yyyy-M-d dddd")</td>
            <td>@match.HomeTeam.Name</td>
            <td>@match.AwayTeam.Name</td>
            <td>@match.Competition.Name</td>
        </tr>
    }
    </tbody>
</table>

@section Scripts
{
    <script>
        $(document).ready(function() {
             $('#ItemsTable').DataTable();
         });
    </script>
}